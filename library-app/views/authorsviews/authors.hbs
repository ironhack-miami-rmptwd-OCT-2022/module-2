<div class="container-fluid">



<h3 class="text-primary text-center">Database of Authors </h3>


<div class="row mt-5">


            {{#each listOfAuthors}}
            <div class="col-3 p-2 text-center tall-fixed-height">

                <div class="bg-light container p-4 medium-fixed-height">
                        <div class="fixed-height-x-smal">
                                <div>
                                    {{this.name}}
                                </div>
                        </div>

                        <div class="mt-4">
                            <img src="{{this.image_url}}" style="height: 100px">
                        </div>


                        <div class="row mt-4">
                            <div class="col-8"></div>
                            <div class="col-4">
                                <a href="/authors/{{this._id}}">See Details</a>
                            </div>
                    </div>


                </div>
            </div>
            {{/each}}

</div>





</div>